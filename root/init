#!/bin/sh
set -e

# create directories
mkdir -p \
    /config

# permissions
chown -R xteve:xteve \
    /config
chmod -R 777 /config

# first arg is `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- xteve "$@"
fi

# allow the container to be started with `--user`
if [ "$1" = 'jellyfin' -a "$(id -u)" = '0' ]; then
    exec su-exec xteve "$0" "$@"
fi

exec "$@"
