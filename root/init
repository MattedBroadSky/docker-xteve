#!/bin/sh
set -e

# make dir for config
mkdir -p /config \
	 /root/.xteve \
	 /tmp/xteve \
;
  chown xteve:xteve /config \
	 /root/.xteve \
	 /tmp/xteve \
;

# permissions
chmod -R 777 /config

# first arg is `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- xteve "$@"
fi

# allow the container to be started with `--user`
if [ "$1" = 'xteve' -a "$(id -u)" = '0' ]; then
    exec su-exec xteve "$0" "$@"
fi

exec "$@"
